{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": { "@/*": ["./lib/*"] },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },

  "include": ["lib/**/*.js", "src/**/*.js", "types.d.ts"],
  "exclude": ["build", "dist", "node_modules"]
}
