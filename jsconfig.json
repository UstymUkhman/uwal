{
    "include": ["lib/**/*.js", "src/**/*.js", "types.d.ts"],
    "exclude": ["build", "dist", "node_modules"],

    "compilerOptions":
    {
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types"],
        "paths": { "@/*": ["lib/*"] },
        "moduleResolution": "Node",
        "module": "ESNext",
        "target": "ESNext",
        "checkJs": true,
        "baseUrl": "/"
    }
}
