{
  "name": "uwal",
  "description": "Unopinionated WebGPU Abstraction Library",
  "homepage": "https://github.com/UstymUkhman/uwal#readme",
  "packageManager": "^npm@9.8.0",
  "main": "./build/uwal.umd.cjs",
  "module": "./build/uwal.js",
  "types": "./types.d.ts",
  "version": "0.0.10",
  "private": false,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Ustym Ukhman",
    "email": "ustym.ukhman@gmail.com",
    "url": "https://github.com/UstymUkhman/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UstymUkhman/uwal.git"
  },
  "bugs": {
    "email": "ustym.ukhman@gmail.com",
    "url": "https://github.com/UstymUkhman/uwal/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "imports": {
    "#*": "./lib"
  },
  "exports": {
    ".": {
      "types": "./types.d.ts",
      "import": "./build/uwal.js",
      "require": "./build/uwal.umd.cjs",
      "default": "./build/uwal.js"
    }
  },
  "directories": {
    "assets": "assets",
    "build": "build",
    "dist": "dist",
    "lib": "lib",
    "src": "src",
    "types": "types"
  },
  "files": [
    "package.json",
    "typings.d.ts",
    "types.d.ts",
    "README.md",
    "LICENSE",
    "build",
    "types"
  ],
  "keywords": [
    "wgsl",
    "webgpu",
    "shaders",
    "library",
    "renderer",
    "javascript",
    "typescript",
    "computation"
  ],
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "bun x simple-server",
    "build:lessons": "bun run build -- --mode=lessons",
    "build:examples": "bun run build -- --mode=examples",
    "build:pages": "bun build:lessons && bun build:examples",
    "build:types": "bun run tsc --project tsconfig.build.json",
    "build:lib": "bun run build:types && bun run build -- --mode=lib"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.54"
  },
  "devDependencies": {
    "sass": "^1.84.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-glsl": "^1.3.1",
    "wgpu-matrix": "^3.3.0",
    "wgsl_reflect": "^1.0.17"
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ],
  "engines": {
    "node": ">= 18.12.1",
    "npm": ">= 9.8.0",
    "bun": ">= 1.1.4"
  }
}
